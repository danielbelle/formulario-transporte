{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "runtime": "V2",
        "numReplicas": 1,
        "startCommand": "php artisan serve --host=0.0.0.0 --port=${PORT}",
        "limitOverride": {
            "containers": {
                "cpu": 0.5,
                "memoryBytes": 3000000000
            }
        },
        "sleepApplication": false,
        "multiRegionConfig": {
            "us-east4-eqdc4a": {
                "numReplicas": 1
            }
        },
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
